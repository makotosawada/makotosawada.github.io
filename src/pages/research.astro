---
import Layout from "@/layouts/Layout.astro";
import { profile } from "@/settings";
import BetterIcon from "@/components/ui/BetterIcon.astro";
import List from "@/components/ui/List.astro";
import {RESEARCH_ICONS} from "@/data/researchIcons";

const { fullName, title, institute, research_areas } = profile
---

<Layout title=`Research | ${fullName}`>
  <div class="prose max-w-none">
    <h1 class="text-3xl font-bold mb-8">Research</h1>

    <div class="mb-12">
      <p class="text-lg mb-6">
        Focusing on the synergy of high-resolution spectroscopy, detector science, and laboratory astrophysics to decode the nature of the non-equilibrium universe.
      </p>
    </div>

    <h2 class="text-2xl font-bold mb-6">Strategic Research Pillars</h2>
    <div class="grid gap-8 mb-12">
      {
        research_areas.map((area) => (
          <div class="flex gap-6 items-start">
            <div>
              <h3 class="text-xl font-semibold mb-2">{area.title}</h3>
              <p class="text-sm">{area.description}</p>
            </div>
          </div>
        ))
      }
    </div>

    <List listTitle="Research Milestones" listItems={[
      {
        title: "XRISM observations of supernova remnants with non-equilbrium plasma",
        description: ""
      },
      {
        title: "Lab-simulations of non-equilibrium plasma using EBIT",
        description: ""
      },
      {
        title: "In-flight calibration of XRISM/Resolve spectrometer",
        description: ""
      }
    ]} />

    <h2 class="text-2xl font-bold mb-6">Research Impact</h2>
    <p class="text-lg mb-6">
      My research has opened new frontiers in (TBW).
    </p>
  </div>
</Layout>
