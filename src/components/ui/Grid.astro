---
interface Props {
  gridTitle: string;
  gridItems: {
    title: string;
    summary: string;
    description: string;
  }[];
}

const {gridTitle, gridItems} = Astro.props;
---
<h2 class="text-3xl font-bold mb-8">{gridTitle}</h2>
<!-- <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"> -->
<div class="grid grid-cols-1 gap-10">
  {gridItems.map((item) => (
    <div class="p-6 rounded-lg text-base-content bg-base-200">
      <h3 class="text-xl font-semibold mb-3">{item.title}</h3>
      {item.summary && (
        <p class="text-base font-bold mb-2 leading-snug">{item.summary}</p>
      )}
      <p class="text-base leading-relaxed opacity-80">{item.description}</p>
    </div>
  ))
  }
</div>
