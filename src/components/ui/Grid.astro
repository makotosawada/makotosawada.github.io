---
interface Props {
  gridTitle: string;
  gridItems: {
    title: string;
    role: string;
    summary: string;
    description: string;
  }[];
}

const {gridTitle, gridItems} = Astro.props;
---
<h2 class="text-3xl font-bold mb-8">{gridTitle}</h2>
<div class="grid grid-cols-1 gap-10">
  {gridItems.map((item) => (
    <div class="p-6 rounded-lg text-base-content bg-base-200">
ã€€  <div class="flex flex-col md:flex-row md:justify-between md:items-baseline mb-3 gap-2 md:gap-4">
      <h3 class="text-xl font-semibold">{item.title}</h3>
      {item.role && (
        <span class="text-xs font-mono px-2 py-1 bg-secondary/10 text-secondary border border-secondary/20 rounded">
          {item.role}
        </span>
      )}
      </div>
      {item.summary && (
        <p class="text-base font-bold mb-2 leading-snug opacity-80">{item.summary}</p>
      )}
      <p class="text-base leading-relaxed font-serif">{item.description}</p>
    </div>
  ))
  }
</div>
